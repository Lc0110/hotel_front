/* pages/mine/userinfo/userinfo.wxss */
.profile-info{
  height: 280rpx;
  padding: 0 30.25rpx;
}

.profile-info .avatar{
  display: block;
  margin: 0 auto;
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info{
  height: 85rpx;
  text-align: center;
  padding-left: 31.25rpx;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
}

.profile-info .name{
  height: 45rpx;
  line-height: 45rpx;
  color: black;
  font-size: 37.5rpx;
  text-align: center;
}

.item-line{
  margin: 20px 0;
  padding-bottom: 10px;
  display: flex;
  align-items : center;
  justify-content: flex-start;
  border-bottom:  1rpx solid rgba(0, 0, 0, .1);
}

.base-info .item-line .base{
  margin-left: 20rpx;
  flex: 1;
  font-size: 45rpx;
  font-weight: 800;
}

.item-line .name{
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: 600;
  flex: 1;
}

.base-info .item-line .edit{
  margin-right: 20rpx;
  color: rgb(39, 166, 245);
}

.base-info .item-line .item{
  margin-right: 20rpx;
}